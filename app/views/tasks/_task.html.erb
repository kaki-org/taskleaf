<tr id="<%= dom_id(task) %>">
  <td><%= link_to task.name, task, data: { turbo_frame: "_top" } %></td>
  <td><%= task.created_at %></td>
  <td>
    <%= link_to '編集', edit_task_path(task), class: 'btn btn-primary', data: { turbo_frame: "_top" } %>
    <%= link_to '削除', task_confirm_destroy_path(task), class: 'btn btn-danger delete', data: { turbo_frame: "_top" } %>
  </td>
</tr>
